<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    android:background="@drawable/design_for_question_list">

    <TextView
        android:id="@+id/tv_header_current_city_marker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="TextView"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/img_current_city_marker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/img_current_city_marker"
        android:layout_width="0dp"
        android:scaleType="centerCrop"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_header_current_city_marker"
        app:layout_constraintStart_toStartOf="@+id/tv_header_current_city_marker"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_current_city_marker"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/img_london_3" />

    <TextView
        android:id="@+id/tv_main_text_current_city_marker"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        android:fontFamily="@font/abril_fatface"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_header_current_city_marker"
        app:layout_constraintStart_toStartOf="@+id/tv_header_current_city_marker"
        app:layout_constraintTop_toBottomOf="@+id/img_current_city_marker" />
</androidx.constraintlayout.widget.ConstraintLayout>