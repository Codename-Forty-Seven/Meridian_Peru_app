        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:padding="7dp"
        android:text="@string/txt_mumbai"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tv_botswana"
        app:layout_constraintEnd_toEndOf="@+id/tv_london"
        app:layout_constraintStart_toStartOf="@+id/tv_london"
        app:layout_constraintTop_toBottomOf="@+id/tv_gonna_re_zhu" />

    <TextView
        android:id="@+id/tv_botswana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_weight="1"
        android:background="@drawable/anim_click_text"
        android:clickable="true"
