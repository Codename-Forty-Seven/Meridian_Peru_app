        app:layout_constraintStart_toStartOf="@+id/tv_london"
        app:layout_constraintTop_toBottomOf="@+id/tv_albufera" />

    <TextView
        android:id="@+id/tv_tamanrasset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_weight="1"
