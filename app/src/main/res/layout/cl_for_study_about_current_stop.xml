<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:state_pressed="true">

    <TextView
        android:id="@+id/tv_header_for_study_about_current_stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_current_place"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_header_for_study_about_current_stop"
        app:layout_constraintStart_toStartOf="@+id/tv_header_for_study_about_current_stop"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_for_study_about_current_stop"
        app:srcCompat="@drawable/img_royal_observatory" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ll_with_control_btns_about_current_stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_current_place">

        <TextView
            android:id="@+id/tv_main_txt_for_study_about_current_stop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:text="nrgjnerjkgnfdklsn"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_with_control_btns_about_current_stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_quiz_about_current_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/anim_click_text"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/txt_quiz"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_next_place_for_study_about_current_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/anim_click_text"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/txt_next_place"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone"
            app:srcCompat="@drawable/anim_click_text" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>